#!/usr/bin/env bash

reset="\e[00m";
black="\e[1;30m";
blue="\e[1;34m";
cyan="\e[1;36m";
green="\e[1;32m";
orange="\e[1;33m";
purple="\e[1;35m";
red="\e[1;31m";
violet="\e[1;35m";
white="\e[1;37m";
yellow="\e[1;33m";

hash starship &>/dev/null;
if [ $? -eq 0 ]; then
  export STARSHIP_CONFIG=~/.dotfiles/starship.toml
  eval "$(starship init bash)"
else
  PROMPT_DIRTRIM=3
  set_bash_prompt() {
    [ $UID -eq 0 ] && PS1="\[$red\]\u" || PS1="\[$yellow\]\u" # Highlight the user name when logged in as root
    [ -n "${SSH_TTY}" ] && PS1+="\[$reset\]@\[$green\]\h" # Add the hostname when connected via SSH
    PS1+="\[$reset\]:\[$blue\]\w\[$reset\]" # working directory shorten path
    PS1+=" \$ "
  }
  PROMPT_COMMAND=set_bash_prompt
fi;
